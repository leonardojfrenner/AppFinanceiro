<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para títulos de seção -->
    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Estilo para cards -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <!-- Estilo para chips -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Estilo para textos secundários -->
    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:alpha">0.6</item>
    </style>

    <!-- Estilo para TextInputLayout com dropdown -->
    <style name="Widget.App.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
    </style>
</resources>